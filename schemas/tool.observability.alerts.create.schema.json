{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Create System Alert",
  "description": "Create a new system alert with specified severity and message",
  "properties": {
    "level": {
      "type": "string",
      "enum": ["info", "warning", "error", "critical"],
      "description": "Severity level of the alert"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "description": "Alert message describing the issue or event"
    },
    "component": {
      "type": "string",
      "description": "System component that generated the alert"
    },
    "details": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional details about the alert"
    }
  },
  "required": ["level", "message"],
  "additionalProperties": false
}