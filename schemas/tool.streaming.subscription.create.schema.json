{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Create Stream Subscription",
  "description": "Create a subscription to a real-time data stream",
  "properties": {
    "stream_type": {
      "type": "string",
      "enum": ["market_data", "trading_signals", "portfolio_updates", "risk_alerts", "compliance_events", "system_metrics"],
      "description": "Type of stream to subscribe to"
    },
    "filters": {
      "type": "object",
      "description": "Filters to apply to the stream",
      "properties": {
        "symbols": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Filter by specific symbols"
        },
        "min_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence level for signals"
        },
        "alert_level": {
          "oneOf": [
            { "type": "string", "enum": ["info", "warning", "error", "critical"] },
            { "type": "array", "items": { "type": "string", "enum": ["info", "warning", "error", "critical"] } }
          ],
          "description": "Alert levels to include"
        }
      },
      "additionalProperties": true
    },
    "max_events_per_second": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 100,
      "description": "Maximum events per second for rate limiting"
    },
    "buffer_size": {
      "type": "integer",
      "minimum": 10,
      "maximum": 10000,
      "default": 1000,
      "description": "Buffer size for the subscription"
    }
  },
  "required": ["stream_type"],
  "additionalProperties": false
}