{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GetOHLCVRequest",
  "type": "object",
  "required": ["symbol", "start", "end", "interval"],
  "properties": {
    "symbol": {
      "type": "string",
      "description": "Ticker or instrument identifier."
    },
    "start": {
      "type": "string",
      "format": "date-time",
      "description": "Start timestamp (UTC)."
    },
    "end": {
      "type": "string",
      "format": "date-time",
      "description": "End timestamp (UTC)."
    },
    "interval": {
      "type": "string",
      "enum": ["minute", "hour", "day"],
      "description": "Aggregation interval."
    },
    "adjustment": {
      "type": "string",
      "enum": ["raw", "split", "dividend"],
      "default": "split",
      "description": "Adjustment type for corporate actions."
    },
    "vendor": {
      "type": "string",
      "description": "Optional vendor override sourced from provenance ledger."
    }
  },
  "additionalProperties": false
}
