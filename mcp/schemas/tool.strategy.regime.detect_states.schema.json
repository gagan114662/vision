{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StrategyRegimeDetectStatesRequest",
  "type": "object",
  "required": ["prices"],
  "properties": {
    "prices": {
      "type": "array",
      "items": {"type": "number"},
      "minItems": 10,
      "description": "Sequence of closing prices ordered in time"
    },
    "volumes": {
      "type": "array",
      "items": {"type": "number"},
      "description": "Optional sequence of volumes aligned with prices"
    },
    "n_regimes": {
      "type": "integer",
      "minimum": 2,
      "maximum": 6,
      "default": 3,
      "description": "Number of hidden regimes to model"
    },
    "covariance_type": {
      "type": "string",
      "enum": ["full", "diag", "spherical", "tied"],
      "default": "full"
    }
  },
  "additionalProperties": false
}
