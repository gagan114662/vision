{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StrategyMeanReversionEstimateParametersRequest",
  "type": "object",
  "required": ["prices"],
  "properties": {
    "prices": {
      "type": "array",
      "items": {"type": "number"},
      "minItems": 20,
      "description": "Sequence of prices used to fit Ornstein-Uhlenbeck parameters"
    },
    "dt": {
      "type": "number",
      "default": 1.0,
      "description": "Time step between observations (default 1.0)"
    }
  },
  "additionalProperties": false
}
