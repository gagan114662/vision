{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RunRobustnessResponse",
  "type": "object",
  "required": ["sharpe", "cross_validation", "walk_forward", "bootstrap", "verdict"],
  "properties": {
    "sharpe": {"type": "number"},
    "cross_validation": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["fold", "sharpe"],
        "properties": {
          "fold": {"type": "number"},
          "sharpe": {"type": "number"}
        },
        "additionalProperties": false
      }
    },
    "walk_forward": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["window", "cumulative_return", "sharpe"],
        "properties": {
          "window": {"type": "number"},
          "cumulative_return": {"type": "number"},
          "sharpe": {"type": "number"}
        },
        "additionalProperties": false
      }
    },
    "bootstrap": {
      "type": "object",
      "required": ["mean", "lower_95", "upper_95"],
      "properties": {
        "mean": {"type": "number"},
        "lower_95": {"type": "number"},
        "upper_95": {"type": "number"}
      },
      "additionalProperties": false
    },
    "benchmark_correlation": {"type": ["number", "null"]},
    "buy_and_hold_similarity": {"type": ["number", "null"]},
    "verdict": {"type": "string"}
  },
  "additionalProperties": false
}
