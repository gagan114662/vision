{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GenerateComplianceSummaryRequest",
  "type": "object",
  "required": ["strategy_id", "controls", "evidence"],
  "properties": {
    "strategy_id": {"type": "string"},
    "controls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["control", "status", "provenance_id"],
        "properties": {
          "control": {"type": "string"},
          "status": {"type": "string", "enum": ["PASS", "FAIL", "WAIVED"]},
          "provenance_id": {"type": "string"},
          "notes": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "outstanding_risks": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": false
}
